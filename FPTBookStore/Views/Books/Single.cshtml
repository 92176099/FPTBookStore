@{
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}
@model FPTBookStore.Models.Book
@{
    ViewData["Title"] = "Details";
}


<section class="bg-sand padding-large">
	<div class="container">
		<div class="row">

			<div class="col-md-6">
				<img style="max-height:500px" src="~/images/@Model.BookImage">
			</div>

			<div class="col-md-6 pl-5">
				<div class="product-detail">
					<h1>@Html.DisplayFor(model => model.BookName)</h1>
					<p>              @foreach(var genre in ViewBag.Genres)
                    {
                        if (genre.GenreId == Model.GenreId)
                        {
                             <div>@genre.GenreName</div>
                        }
                    }</p>
					<span class="price colored">$@Html.DisplayFor(model => model.BookPrice)</span>

					<p>
					@Html.DisplayFor(model => model.BookDescription)
					</p>

					<button type="submit" name="add-to-cart" value="27545" class="button">Add to cart</button>
					
				</div>
			</div>

		</div>
	</div>
</section>
