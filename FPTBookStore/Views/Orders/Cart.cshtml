@{
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using FPTBookStore.Models
@model dynamic
@{
    ViewData["Title"] = "Details";
}


<section class="bg-sand padding-large">
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems2)
                {
                    <tr>
                        <td>
                            @item.BookName
                        </td>
                        <td>
                            <input>
                        </td>
                        <td>
                            $@(item.Quantity*item.Price)
                        </td>
                        <td>
                            <a href="#">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-action="PlaceOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="orderId" hidden value="@Model.OrderId" />
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" />
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" name="phone" />
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" name="address" />
            </div>
            <div class="form-group">
                <label for="total">Total</label>
                <input type="text" name="total" value="5000" hidden/>
                <p>$15300</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Place order" class="btn btn-primary" />
            </div>
        </form>
        <button type="submit" name="add-to-cart" value="27545" class="button">View old order</button>
</section>
